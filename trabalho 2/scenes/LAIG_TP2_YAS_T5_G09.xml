<yas>
    <scene root="scenario" axis_length="5.0" />

    <views default="Default" >
        <perspective id="Default" near="0.1" far="500" angle="45">
            <from x="10" y="10" z="10" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <perspective id="Table" near="0.1" far="600" angle="40">
            <from x="25" y="10" z="12" />
            <to x="9" y="2" z="11" />
        </perspective>
        <ortho id="Ortho" near="0.4" far="200" left="-15" right="15" top="12" bottom="-6" >
            <from x="30" y="5" z="25" />
            <to x="0" y="5" z="3" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.7" g="0.9" b="0.96" a="1.0" />
    </ambient>

    <lights>
        <omni id="Candeeiro" enabled="1" >
        <location x="9.8" y="11.9" z="10" w="1.0" />
        <ambient r="0" g="0" b="0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <spot id="Spot Light" enabled="0" angle="0.0" exponent="0.0">
            <location x="10.2" y="11.9" z="10" w="1.0" />
            <target x="5.0" y="0.0" z="5.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </spot>

        <omni id="Ambiente" enabled="1" >
        <location x="13.0" y="20.0" z="13.0" w="1.0" />
        <ambient r="0" g="0" b="0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <omni id="1" enabled="1" >
        <location x="-7.0" y="2.0" z="3.0" w="1.0" />
        <ambient r="0" g="0" b="0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <omni id="2" enabled="1" >
        <location x="0.0" y="-5.0" z="3.0" w="1.0" />
        <ambient r="0" g="0" b="0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
        <omni id="3" enabled="1" >
        <location x="7.0" y="2.0" z="3.0" w="1.0" />
        <ambient r="0" g="0" b="0" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="ground" file="scenes/images/ground.jpg" />
        <texture id="mosaic_wall" file="scenes/images/mosaic-wall.jpg" />
        <texture id="mosaic_wall_2" file="scenes/images/mosaic-wall_2.jpg" />
        <texture id="cupboards_stone" file="scenes/images/cupboards_stone.jpg" />
        <texture id="apple" file="scenes/images/apple.jpg" />
        <texture id="cmtv" file="scenes/images/tv.jpg"/>
        <texture id="terrain" file="scenes/images/terrain.jpg"/>
        <texture id="terrainMap" file="scenes/images/heightmap.jpg"/>
        <texture id="water" file="scenes/images/water.jpg"/>
        <texture id="waterMap" file="scenes/images/waterHeightMap1.jpg"/>
    </textures>

    <materials>
        <material id="white" shininess = "30" >
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1" g="1" b="1" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </material>

        <material id="red" shininess = "10" >
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.5" g="0.1" b="0.1" a="1.0" />
            <specular r="0.6" g="0" b="0" a="1.0" />
        </material>

        <material id="grey" shininess = "50" >
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>

        <material id="beige" shininess = "20" >
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1" g="0.95" b="0.85" a="1.0" />
            <specular r="1" g="0.95" b="0.85" a="1.0" />
        </material>

        <material id="green" shininess = "80" >
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.8" g="0.9" b="0.8" a="1.0" />
            <specular r="0.8" g="0.9" b="0.8" a="1.0" />
        </material>

        <material id="black" shininess = "50" >
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.1" g="0.1" b="0.1" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
        </material>

        <material id="black_glass" shininess = "500" >
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="floor_tr">
            <scale x="20" y="1" z="20" />
            <rotate axis="x" angle="-90" />
            <rotate axis="z" angle="-90" />
        </transformation>
        <transformation id="left_wall_tr">
            <scale x="1" y="15" z="20" />
            <translate x="0" y="0" z="1" />
            <rotate axis="y" angle="90" />
        </transformation>
        <transformation id="right_wall_tr">
            <scale x="20" y="15" z="1" />
        </transformation>
        <transformation id="wall_tr">
            <rotate axis="y" angle="-90" />
        </transformation>
        <transformation id="cupboard_body_tr">
            <scale x="20" y="5" z="4" />
        </transformation>
        <transformation id="terrain">
            <scale x="35" y="1" z="35" />
            <translate x="0" y="-2" z="0" />
        </transformation>
        <transformation id="water">
            <scale x="50" y="1" z="50" />
            <translate x="0" y="-0.5" z="0" />
        </transformation>
    </transformations>

    <animations>
        <linear id="test_animation1" span="1">
          <controlpoint xx="0" yy="0" zz="5"/>
          <controlpoint xx="5" yy="0" zz="0"/>
        </linear>
        <linear id="test_animation2" span="1">
            <controlpoint xx="0" yy="0" zz="15"/>
            <controlpoint xx="0" yy="0" zz="0"/>
        </linear>
        <circular id="test_circ_anim" span="1" center="5 0 5" radius="5" startang="90" rotang="-90"/>
        <circular id="test_circ_anim2" span="2" center="0 0 5" radius="10" startang="0" rotang="-90"/>


    </animations>

    <primitives>
        <primitive id="unit_square">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>

        <primitive id="triangle_left">
            <triangle  x1="0" y1="15" z1="0"
                    x2="0" y2="0" z2="15"
                    x3="0" y3="0" z3="0" />
        </primitive>

        <primitive id="triangle_right">
            <triangle  x1="0" y1="15" z1="0"
                    x2="0" y2="0" z2="0"
                    x3="15" y3="0" z3="0" />
        </primitive>

        <primitive id="cylinder">
            <cylinder  base="1" top="1" height="1" slices="20" stacks="10" />
        </primitive>

        <primitive id="prism_quad">
            <cylinder  base="0.7" top="0.7" height="1" slices="4" stacks="10" />
        </primitive>

        <primitive id="cut_cone">
            <cylinder  base="2" top="1" height="1" slices="25" stacks="10" />
        </primitive>

        <primitive id="sphere">
            <sphere  radius="0.5" slices="20" stacks="20" />
        </primitive>

        <primitive id="torus">
            <torus  inner= "0.2" outer="2" slices="25" loops="40" />
        </primitive>

        <!--   PRIMITIVAS NURBS    -->
        <primitive id="plane">
            <plane npartsU="5" npartsV="4" />
        </primitive>

        <primitive id="patch">
            <patch npointsU="3" npointsV="4" npartsU="20" npartsV="30">
                <controlpoint xx="-2.0" yy="-2.0" zz="1.0"/>
                <controlpoint xx="-2.0" yy="-1.0" zz="-2.0"/>
                <controlpoint xx="-2.0" yy="1.0" zz="5.0"/>
                <controlpoint xx="-2.0" yy="2.0" zz="-1.0"/>
                <controlpoint xx="0.0" yy="-2.0" zz="0.0"/>
                <controlpoint xx="0.0" yy="-1.0" zz="-1.0"/>
                <controlpoint xx="0.0" yy="1.0" zz="1.5"/>
                <controlpoint xx="0.0" yy="2.0" zz="0.0"/>
                <controlpoint xx="2.0" yy="-2.0" zz="-1.0"/>
                <controlpoint xx="2.0" yy="-1.0" zz="2.0"/>
                <controlpoint xx="2.0" yy="1.0" zz="-5.0"/>
                <controlpoint xx="2.0" yy="2.0" zz="1.0"/>
            </patch>
        </primitive>

        <primitive id="vehicle">
            <vehicle/>
        </primitive>

        <primitive id="cylinder2">
            <cylinder2  base="2" top="1" height="3" slices="20" stacks="5" />
        </primitive>

        <primitive id="terrain">
            <terrain  idtexture="terrain" idheightmap="terrainMap" parts="50" heightscale="10" />
        </primitive>

        <primitive id="water">
            <water  idtexture="water" idwavemap="waterMap" parts="50" heightscale="2" texscale="3" />
        </primitive>
    </primitives>

    <components>
        <component id="water">
            <transformation>
                <transformationref id="water" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="water" />
            </children>
        </component>

        <component id="terrain">
            <transformation>
                <transformationref id="terrain" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="terrain" />
            </children>
        </component>

        <component id="vehicle">
            <transformation>
            </transformation>
            <!-- <animations>
                <animationsref id="" />
            </animations> -->
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="" length_t="" />
            <children>
                <primitiveref id="vehicle" />
            </children>
        </component>

<!--         <component id="">
            <transformation>
            </transformation>

        </component> -->


        <component id="scenario">
            <transformation></transformation>

            <materials>
                <material id="default" />
            </materials>
            <texture id="none" />
            <children>

                <componentref id="vehicle" />
                <componentref id="water" />
                <componentref id="terrain" />
            </children>
        </component>
 </components>
</yas>
